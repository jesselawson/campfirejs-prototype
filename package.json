{
    "name": "CampfireJS",
    "version": "0.1.0",
    "description": "A pure JavaScript storytelling toolkit.",
    "repository": "https://www.github.com/lawsonry/campfirejs",
    "author": "Jesse Lawson <jesse@lawsonry.com>",
    "license": "GPL",
    "scripts": {
        "pre-build": "git describe --tags > VERSION",
        "the-build": "./node_modules/.bin/minify src/campfire.js --out-file dist/campfire.min.js",
        "post-build": "node postbuild.js && rm -rf VERSION",
        "build": "npm run-script pre-build && npm run-script the-build && npm run-script post-build"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-minify": "^0.4.3",
        "babel-plugin-add-header-comment": "^1.0.3",
        "babel-plugin-minify-mangle-names": "^0.4.3",
        "babel-plugin-minify-simplify": "^0.4.3",
        "babel-preset-minify": "^0.4.3"
    }
}
